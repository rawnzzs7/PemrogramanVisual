<Window x:Class="Aplikasi_Kediri_Mazzeh.Views.Page3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Makanan" Height="450" Width="800">
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <ImageBrush ImageSource="Asset/Gambar/home.png" Stretch="Fill"/>
        </Grid.Background>

        <Border Background="#AAFFFFFF" Padding="10" CornerRadius="5"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <TextBlock Text="Pilih Makanan" FontSize="24" FontWeight="Bold"
                       Foreground="Black" TextAlignment="Center"/>
        </Border>

        <!-- Kotak Pilihan Makanan -->
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0">
            <!-- Makanan 1 -->
            <Button Width="100" Height="100" Margin="20" Click="Makanan_Click">
                <StackPanel>
                    <Image Source="Asset\Gambar\Makanan\1.jpg" Width="80" Height="80"/>
                    <TextBlock Text="Tahu Takwa" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <!-- Makanan 2 -->
            <Button Width="100" Height="100" Margin="20" Click="Makanan_Click">
                <StackPanel>
                    <Image Source="Asset\Gambar\Makanan\2.jpg" Width="80" Height="80"/>
                    <TextBlock Text="Sate Bekicot" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <!-- Makanan 3 -->
            <Button Width="100" Height="100" Margin="20" Click="Makanan_Click">
                <StackPanel>
                    <Image Source="Asset\Gambar\Makanan\3.jpg" Width="80" Height="80"/>
                    <TextBlock Text="Pecel Tumpang" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <!-- Makanan 4 -->
            <Button Width="100" Height="100" Margin="20" Click="Makanan_Click">
                <StackPanel>
                    <Image Source="Asset\Gambar\Makanan\4.jpg" Width="80" Height="80"/>
                    <TextBlock Text="Gethuk Pisang" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <!-- Makanan 5 -->
            <Button Width="100" Height="100" Margin="20" Click="Makanan_Click">
                <StackPanel>
                    <Image Source="Asset\Gambar\Makanan\5.jpg" Width="80" Height="80"/>
                    <TextBlock Text="Stik Tahu" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </WrapPanel>

        <!-- Kembali Button -->
        <Button Content="Kembali" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" Click="KembaliPage2_Click"/>
    </Grid>
</Window>