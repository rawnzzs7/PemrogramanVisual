<Window x:Class="Aplikasi_Kediri_Mazzeh.Views.Page2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apa yang ingin diperiksa?" Height="450" Width="800">
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <ImageBrush ImageSource="Asset/Gambar/home.png" Stretch="Fill"/>
        </Grid.Background>

        <!-- Header Kediri Info Mazzeh -->
        <Border Background="#AAFFFFFF" Padding="5" CornerRadius="5"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,20,0">
            <TextBlock Text="Kediri Info Mazzeh"
                       FontSize="24" FontWeight="Bold"
                       Foreground="Black" TextAlignment="Center"/>
        </Border>

        <!-- Judul Pertanyaan -->
        <Border Background="#AAFFFFFF" Padding="10" CornerRadius="5"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0">
            <TextBlock Text="Apa saja yang ingin diperiksa?"
                       FontSize="24" FontWeight="Bold"
                       Foreground="Black" TextAlignment="Center"/>
        </Border>

        <!-- Kotak Pilihan Kuliner dan Pariwisata -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0">
            <Button Content="Kuliner" Width="150" Height="100" Margin="20" FontWeight="Bold" FontSize="15" Click="Kuliner_Click"/>
            <Button Content="Pariwisata" Width="150" Height="100" Margin="20" FontWeight="Bold" FontSize="15" Click="Pariwisata_Click"/>
        </StackPanel>

        <!-- Kembali ke Menu Button -->
        <Button Content="Kembali ke Menu" Width="150" Height="40"
                HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="20,0,0,20" Click="KembaliMenu_Click"/>
    </Grid>
</Window>