<Window x:Class="Aplikasi_Kediri_Mazzeh.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kediri Info Mazzeh" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="377*"/>
        </Grid.ColumnDefinitions>
        <!-- Background -->
        <Grid.Background>
            <ImageBrush ImageSource="Asset/Gambar/home.png" Stretch="Fill"/>
        </Grid.Background>

        <!-- Kediri Title dengan Border -->
        <Border Background="#AAFFFFFF" Padding="10" CornerRadius="10"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="278,145,0,0" Grid.Column="1">
            <TextBlock Text="Kediri" FontSize="48" FontWeight="Bold" Foreground="Black"/>
        </Border>

        <!-- Info Mazzeh dengan Border -->
        <Border Background="#AAFFFFFF" Padding="5" CornerRadius="10"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,214,280,0" Grid.Column="1">
            <TextBlock Text="Info Mazzeh" FontSize="24" FontWeight="Bold" Foreground="Black"/>
        </Border>

        <!-- Masuk Menu Button -->
        <Button Content="Masuk Menu" Width="150" Height="40" FontWeight="Bold"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,20,20" Click="MasukMenu_Click" Grid.Column="1"/>
    </Grid>
</Window>