<Window x:Class="Aplikasi_Kediri_Mazzeh.Views.Page4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pariwisata" Height="450" Width="800">
    <Grid>
        <!-- Background -->
        <Grid.Background>
            <ImageBrush ImageSource="Asset/Gambar/home.png" Stretch="Fill"/>
        </Grid.Background>

        <Border Background="#AAFFFFFF" Padding="10" CornerRadius="5"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <TextBlock Text="Pilih Pariwisata" FontSize="24" FontWeight="Bold"
                       Foreground="Black" TextAlignment="Center"/>
        </Border>

        <!-- Kotak Pilihan Pariwisata -->
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0">
            <!-- Pariwisata 1 -->
            <Button Width="100" Height="100" Margin="20" Click="Pariwisata_Click">
                <StackPanel>
                    <Image Source="Asset/Gambar/Pariwisata/1.png" Width="80" Height="80"/>
                    <TextBlock Text="Kampung Inggris" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <!-- Pariwisata 2 -->
            <Button Width="100" Height="100" Margin="20" Click="Pariwisata_Click">
                <StackPanel>
                    <Image Source="Asset/Gambar/Pariwisata/2.png" Width="80" Height="80"/>
                    <TextBlock Text="Air Terjun Dolo" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <!-- Pariwisata 3 -->
            <Button Width="100" Height="100" Margin="20" Click="Pariwisata_Click">
                <StackPanel>
                    <Image Source="Asset/Gambar/Pariwisata/3.png" Width="80" Height="80"/>
                    <TextBlock Text="SLG" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <!-- Pariwisata 4 -->
            <Button Width="100" Height="100" Margin="20" Click="Pariwisata_Click">
                <StackPanel>
                    <Image Source="Asset/Gambar/Pariwisata/4.png" Width="80" Height="80"/>
                    <TextBlock Text="Candi Surowono" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <!-- Pariwisata 5 -->
            <Button Width="100" Height="100" Margin="20" Click="Pariwisata_Click">
                <StackPanel>
                    <Image Source="Asset/Gambar/Pariwisata/5.png" Width="80" Height="80"/>
                    <TextBlock Text="Gunung Kelud" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </WrapPanel>

        <!-- Kembali Button -->
        <Button Content="Kembali" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,20" Click="KembaliPage2_Click"/>
    </Grid>
</Window>